<h1>Shopping Cart</h1>

<% unless cart.empty? %>
  <h4>Items in Cart</h4>

  <ul>
    <% cart.each do |item| %>
      <li><%= item %></li>
    <% end %>
  </ul>
<% end %>

<h2>Add items to cart</h2>

<%= form_tag('/', method: 'post') do %>

  <%= label_tag("product")%>
  <%= text_field_tag("product") %>

  <%= submit_tag("add to cart") %>

<% end %>
